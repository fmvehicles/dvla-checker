const express = require('express');
const puppeteer = require('puppeteer');
const bodyParser = require('body-parser');

const app = express();
app.use(bodyParser.json());

app.post('/verify', async (req, res) => {
  const { licence_number, postcode, national_insurance, share_code } = req.body;

  if (!licence_number || !postcode) {
    return res.status(400).json({ error: 'Missing required fields' });
  }

  try {
    const browser = await puppeteer.launch({
      headless: true,
      args: ['--no-sandbox', '--disable-setuid-sandbox']
    });

    const page = await browser.newPage();

    await page.goto('https://www.viewdrivingrecord.service.gov.uk/driving-record/licence-number', {
      waitUntil: 'networkidle2'
    });

    // Fill out licence number
    await page.type('#driving-licence-number', licence_number);
    await page.click('button[type=submit]');

    // Postcode page
    await page.waitForSelector('#postcode');
    await page.type('#postcode', postcode);
    await page.click('button[type=submit]');

    // NI Number page (optional)
    try {
      await page.waitForSelector('#national-insurance-number', { timeout: 3000 });
      await page.type('#national-insurance-number', national_insurance);
      await page.click('button[type=submit]');
    } catch (err) {
      // Continue if not asked
    }

    // Final page - capture summary
    await page.waitForSelector('.summary-card', { timeout: 10000 });

    const result = await page.evaluate(() => {
      const summary = document.querySelector('.summary-card');
      return summary ? summary.innerText : 'Summary not found';
    });

    await browser.close();

    res.json({
      status: 'success',
      message: 'DVLA record fetched successfully',
      result
    });
  } catch (err) {
    res.status(500).json({ error: 'Verification failed', details: err.message });
  }
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));
